{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "typings/*"]
    },
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src",
    "./typings/**/*"
  ]
}
